<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.busanbank.mapper.CsMapper">

    <!-- FAQ 목록 조회 -->
    <select id="selectFaqList"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="kr.co.busanbank.dto.FaqDTO">

        SELECT
            faqId,
            groupCode,
            faqCategory,
            question,
            answer,
            createdAt,
            updatedAt,
            status
        FROM faq
        <where>

            <!-- 카테고리 필터 -->
            <if test="cate != null and cate != ''">
                AND faqCategory = #{cate}
            </if>

            <!-- 검색 조건 -->
            <if test="keyword != null and keyword != '' and searchType != null and searchType != ''">

                <choose>

                    <!-- 질문 검색 -->
                    <when test="searchType == 'question'">
                        AND question LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 답변 검색 -->
                    <when test="searchType == 'answer'">
                        AND answer LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 질문 + 답변 -->
                    <when test="searchType == 'qa'">
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </when>

                    <!-- 전체 검색 -->
                    <otherwise>
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </otherwise>

                </choose>

            </if>

            <!-- 사용중인 FAQ만 -->
            <if test="true">
                AND STATUS = 'Y'
            </if>

        </where>

        ORDER BY faqId DESC
        OFFSET #{offset} ROWS
        FETCH NEXT #{size} ROWS ONLY
    </select>


    <!-- 총 갯수 -->
    <select id="selectFaqTotal"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="int">

        SELECT COUNT(*)
        FROM faq
        <where>

            <if test="cate != null and cate != ''">
                AND faqCategory = #{cate}
            </if>

            <if test="keyword != null and keyword != '' and searchType != null and searchType != ''">
                <choose>
                    <when test="searchType == 'question'">
                        AND question LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'answer'">
                        AND answer LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'qa'">
                        AND (
                        question LIKE '%' || #{keyword} || '%'
                        OR answer LIKE '%' || #{keyword} || '%'
                        )
                    </when>
                    <otherwise>
                        AND (
                        question LIKE '%' || #{keyword} || '%'
                        OR answer LIKE '%' || #{keyword} || '%'
                        )
                    </otherwise>
                </choose>
            </if>

        </where>
    </select>

    <!-- FAQ 카테고리 코드 (CODEDETAIL) -->
    <select id="selectFaqCategories"
            resultType="kr.co.busanbank.dto.CodeDetailDTO">

        SELECT
            groupCode,
            code,
            codeName
        FROM CODEDETAIL
        WHERE GROUPCODE = 'FAQ_TYPE'
          AND USEYN = 'Y'
          AND STATUS = 'Y'
        ORDER BY TO_NUMBER(CODE)
    </select>


</mapper>
